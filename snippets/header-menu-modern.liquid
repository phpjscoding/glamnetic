    /* Animated Underline */
    .nav-link::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 2px;
      background: var(--accent);
      transition: width 0.4s ease;
    }

    .nav-link:hover::after {
      width: 100%;
    }

    /* Dropdown Container */
    .dropdown {
      position: absolute;
      top: 100%;
      left: 50%;
      transform: translateX(-50%);
      min-width: 240px;
      background: var(--dropdown-bg);
      border: 1px solid #eaeaea;
      border-radius: 12px;
      box-shadow: 0 20px 40px rgba(0,0,0,0.1);
      opacity: 0;
      visibility: hidden;
      pointer-events: none;
