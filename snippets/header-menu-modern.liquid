      padding: 20px 0;
      {% comment %} overflow: hidden; {% endcomment %}
    }

    /* Reveal animation on hover */
    .nav-item:hover > .dropdown {
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
      transform: translateX(-50%) translateY(0);
    }

    /* Dropdown List */
    .dropdown-list {
      list-style: none;
      margin: 0;
      padding: 0;
      min-width: 220px;
    }

    .dropdown-item {
      opacity: 0;
      transform: translateY(10px);
      transition: var(--transition);
    }

    .nav-item:hover .dropdown-item {
      opacity: 1;
      transform: translateY(0);
    }

    /* Stagger animation */
    .dropdown-item:nth-child(1) { transition-delay: 0.05s; }
    .dropdown-item:nth-child(2) { transition-delay: 0.1s; }
    .dropdown-item:nth-child(3) { transition-delay: 0.15s; }
    .dropdown-item:nth-child(4) { transition-delay: 0.2s; }
    .dropdown-item:nth-child(5) { transition-delay: 0.25s; }

    .dropdown-link {
      display: block;
      padding: 10px 28px;
      color: var(--text-light);
      text-decoration: none;
      font-size: 14.5px;
      transition: var(--transition);
      position: relative;
    }

    .dropdown-link:hover {
      color: var(--accent);
      background: rgba(0,0,0,0.03);
    }

    /* Submenu (Level 2) */
    .has-submenu {
      position: relative;
    }

    .submenu {
      position: absolute;
      top: 0;
      left: 100%;
      width: 240px;
      background: var(--dropdown-bg);
      border: 1px solid #eaeaea;
      border-radius: 12px;
      box-shadow: 0 20px 40px rgba(0,0,0,0.1);
      opacity: 0;
      visibility: hidden;
      pointer-events: none;
      transform: translateY(10px);
      transition: var(--transition);
      padding: 20px 0;
    }

    .has-submenu:hover > .submenu {
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
      transform: translateY(0);
    }

    /* Arrow Icon */
    .arrow {
      margin-left: 8px;
      transition: transform 0.3s ease;
    }

    .has-submenu:hover .arrow {
      transform: translateX(4px);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .nav-list { gap: 24px; }
      .dropdown { left: 0; transform: translateX(0); }
    }
